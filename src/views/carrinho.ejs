<%- include ('./partiels/header.ejs') %>

<body>
    <link rel="stylesheet" href="/css/carrinho.css">
    <%- include('./partiels/navbar.ejs') %>
      
        <main>

            <produtos>
                <% for(let c=0; c<carros; c++) { %>
                    <a href="/produtoInterno/<%= c %>">
                        <veiculo>   
                            <img src="/img/viewProdutos/Moto.png" alt="Seleção de moto">
                            <p>Nome Marca Ano </p>
                            <label>Característica</label>
                            <label>Km</label>
                            <label>Localidade</label>
                            <p>Preço</p>                       
                        </veiculo>                      
                    </a>    
                <% } %>
            </produtos>
    
            <options>
                <article>   
                    <p>Resumo do pedido </p>
                    <br><br>
                    <label>Endereço de faturamento</label>
                    <input type="text" name="endereco" placeholder="Rua Exemplo, Número 77..." autocomplete="off" value="" readonly>
                    <a href="/produtoInterno/<%= 1 %>">Alterar</a>
                    <br><br>
                    <p>Total</p>  
                    <p>R$ 20.000,00</p>     
                    
                    <a href="/produtos ">Adicionar outro produto</a>
                    <a href="/finaizacao ">Continuar</a>

    
                </article>
            </options>

        </main>

    <%- include('./partiels/footer.ejs') %>
            
</body>
</html>