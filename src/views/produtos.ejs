<%- include ('./partiels/header.ejs') %>

    <body>
        <link rel="stylesheet" href="/css/produtos.css">
        <%- include('./partiels/navbar.ejs') %>
        <options>
            <article>   
                <img src="/img/viewProdutos/imagemBrasil.png" alt="Seleção de estado">

                <form action="/produtos" method="post" enctype="multipart/form-data" id="filto">
                    <label for="estados">Estado: </label>
                    <select id="estados" onchange="this.form.submit()">
                        <option value="">Selecione</option>
                        <% for(let veic of veiculos) { %>
                            <option value="<%= veiculos[veiculos.indexOf(veic)].Estado%>"><%= veiculos[veiculos.indexOf(veic)].Estado%></option>
                        <% } %>
                    </select>
                </form>

                <form action="/produtos" method="post" enctype="multipart/form-data" id="filto">
                    <label for="cidade">Cidade: </label>
                    <select id="cidade" onchange="this.form.submit()">
                        <option value="">Selecione</option>
                        <% for(let veic of veiculos) { %>
                            <option value="<%= veiculos[veiculos.indexOf(veic)].Cidade%>"><%= veiculos[veiculos.indexOf(veic)].Cidade%></option>
                        <% } %>
                    </select>
                </form>
                
                <input type="text" name="pesquisa" placeholder="Digite a marca, modelo, cidade, estado ou escolha abaixo" autocomplete="off" value="">
            </article>
            
            <article>   
                
                <img src="/img/viewProdutos/icone_Moto.png" alt="Seleção de moto">

                <form action="/produtos" method="post" enctype="multipart/form-data" id="filto">
                    <label for="marca">Marca: </label>
                    <select id="marca" onchange="this.form.submit()">
                        <option value="">Selecione</option>
                        <% for(let marca of marcas) { %>
                            <option value="<%= marcas[marcas.indexOf(marca)].Nome%>"><%= marcas[marcas.indexOf(marca)].Nome%></option>
                        <% } %>
                    </select>
                </form>

                <form action="/produtos" method="post" enctype="multipart/form-data" id="filto">
                    <label for="modelo">Modelo: </label>
                    <select id="modelo" onchange="this.form.submit()">
                        <option value="">Selecione</option>
                        <% for(let veic of veiculos) { %>
                            <option value="<%= veiculos[veiculos.indexOf(veic)].Modelo%>"><%= veiculos[veiculos.indexOf(veic)].Modelo%></option>
                        <% } %>
                    </select>
                </form>

                <form action="/produtos" method="post" enctype="multipart/form-data" id="filto">
                    <label for="ordenar">Ordenar por: </label>
                    <select id="ordenar" onchange="this.form.submit()">
                        <option value="">Aleatório</option>
                        <option value="menorpreco">Menor preço</option>
                        <option value="maiorpreco">Maior preço</option>
                        <option value="menorkm">Menor KM</option>
                        <option value="maiorkm">Maior KM</option>
                        <option value="menorano">Ano cresente</option>
                        <option value="maiorano">Ano decresente</option>           
                    </select>
                </form>

                <button type="submit">Filtros</button>

            </article>
        </options>

        <div class="produtos">

            <% for(let veic of veiculos) { %>
                <a href="/produtos/<%= veic.idProduto %>">
                    <div class="veiculo">
                        <img src="<%= veic.Imagem %>" alt="Seleção de moto">
                        <p><%= marcas[veic.Marcas_idMarcas-1].Nome  %> <%= veic.Modelo %> <%= veic.Ano %> </p>
                        <label><%= categorias[veic.Categorias_idCategorias-1].Nome %> </label>
                        <label> <%= veic.Cidade %> <space> <%= veic.Estado %></label>
                            <label> Km: <%= veic.Quilometragem %></label>
                            <p>R$ <%= veic.Valor %></p>                       
                        </div>   
                    </a>   
                    <% } %>
                </div>
                

        <%- include('./partiels/footer.ejs') %>
            
</body>
</html>