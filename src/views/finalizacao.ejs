<%- include ('./partials/header.ejs') %>
 <body>
    <link rel="stylesheet" href="/css/finalizacao_compra.css">
    <%- include('./partials/navbar.ejs') %>
        <main>
            <section>
                <form action="/produtos/finalizacao" method="post" enctype="application/json" id="finalizacao">
                    <h1>Finalize sua compra</h1><br><br>
                    <label for="">Número do cartão:</label>
                    <input type="text" placeholder="Digite o número" required>

                    <label for="">Nome do titular do cartão:</label>
                    <input type="text" placeholder="Digite o nome do titular" required>
                    <div><label for="">Débito</label>
                        <input type="radio" name="pagamento" value="debito" id="debito" >
                        <label for="">Crédito</label>
                        <input type="radio" name="pagamento" value="credito" id="credito" ><br><br>
                    </div>
                    
                    <label for="">Vencimento:</label>
                    <input type="date" name="date" id="date">
                    <label for="">Código de segurança:</label>
                    <input type="text" name="codigo" id="codigo">
                        
                    <a href="/sucesso"><button type="submit" id="salvar">FINALIZAR</button></a>
                </form>

                <form id="form-pix">
                    
                    <h1>Pagamento em pix</h1>
                    <img src="/img/google.png">
                   
                   <br>
                    <!-- <label for="">Pagar com PIX?</label>
                        <input type="radio" name="pagamento" value="pix" id="pix"><br><br> -->
                </form>
            </section>
           
                    
                
        </main>
        <%- include('./partials/footer.ejs') %>
            
</body>
</html>